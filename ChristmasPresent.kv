<ChristmasPresent>
    HomeScreen:
    LivingRoom:
    HalfBath:
    Kitchen:
    Closet:
    LaundryRoom:
    Hallway:
    Inventory:

<HomeScreen>
    name: "HomeScreen"
    Image:
        size_hint: (1, 1)  # Stretch to fill the screen
        source: "pics/christmas.png"

    BoxLayout:
        orientation: "vertical"
        padding: 50

        Label:
            canvas.before:
                Color:
                    rgba: (.2,.2,.2, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: "Morgan's Christmas App II"
            font_name: "Roboto-BoldItalic"
            color: 1, 1, 1, 1
            font_size: 30
            size_hint: (1, 0.1)  # Use a smaller space for the label

        BoxLayout:
            orientation: "vertical"
            size_hint: (1, 0.9)  # Occupies remaining vertical space

            # Centering the Button
            AnchorLayout:
                anchor_x: "center"  # Horizontal centering
                anchor_y: "bottom"  # Vertical centering

                Button:
                    size_hint: (.6, .2)  # Button size is 30% width, 20% height of parent
                    background_color: [.1, 1, 0, 1]
                    text: "Find your Present!"
                    on_press: app.root.current = "LivingRoom"

<LivingRoom>
    name: "LivingRoom"
    Image: 
        source: 'pics/LivingRoom/livingroom.png'
    Button:
        size_hint: (.1, .3)  # Adjust width and height
        pos_hint: {"x": 0, "center_y": 0.5}  # Left side, middle height
        on_press: app.root.current = "Kitchen"  # Navigates to Closet
        text: "Left Button"
    
    Button:
        size_hint: (.3, None)  # Set width and fixed height
        height: dp(50)  # Specify height
        pos_hint: {"center_x": 0.5, "y": 0}  # Bottom center
        text: "Middle Button"
    
    Button:
        size_hint: (.1, .3)  # Adjust width and height
        pos_hint: {"right": 1, "center_y": 0.5}  # Right side, middle height
        on_press: app.root.current = "Hallway"  
        text: "Right Button"

    Button:
        size_hint: (.2, .1)  # Adjust width and height
        pos_hint: {"x": .1, "center_y": .8}
        on_press: app.root.current = "Inventory"  
        text: "Inventory"




<HalfBath>
    name: "HalfBath"
    Image:
        source: "pics/halfbath/halfbath.png"
    FloatLayout:
        Button:
            size_hint: (.1, .3)  # Adjust width and height
            pos_hint: {"x": 0, "center_y": 0.5}  # Left side, middle height
            on_press: app.root.current = "Closet"  # Navigates to Closet
            text: "Closet"
        
        Button:
            size_hint: (.3, None)  # Set width and fixed height
            height: dp(50)  # Specify height
            pos_hint: {"center_x": 0.5, "y": 0}  # Bottom center
            on_press: app.root.current = "Hallway"  # Navigates to LivingRoom
            text: "Hallway"
        
        Button:
            size_hint: (.1, .3)  # Adjust width and height
            pos_hint: {"right": 1, "center_y": 0.5}  # Right side, middle height
            on_press: app.root.current = "LaundryRoom"
            text: "Right Button"

    


<Kitchen>
    name: "Kitchen"
    Image:
        source: "pics/Kitchen/kitchen.png"
    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint: .2, .25
            on_press: app.root.current = "Kitchen" # THIS SHOULD BE BARN

        Label:
        Button:
            size_hint: .2, .25
            on_press: app.root.current = "LivingRoom"


<Closet>
    name: "Closet"
    Image:
        source: "pics/closet/closet.png"
    FloatLayout:
        Button:
            size_hint: (.1, .1)  # Adjust width and height
            pos_hint: {"x": 0.1, "center_y": 0.5}  # Left side, middle height
            on_press: app.root.current = "Closet"  # Navigates to Closet
            text: "Left Button"
        
        Button:
            size_hint: (.3, None)  # Set width and fixed height
            height: dp(50)  # Specify height
            pos_hint: {"center_x": 0.5, "y": 0}  # Bottom center
            on_press: app.root.current = "HalfBath"
            text: "Back to Bathroom"
        
        Button:
            size_hint: (.1, .3)  # Adjust width and height
            pos_hint: {"right": 1, "center_y": 0.5}  # Right side, middle height
            on_press: app.root.current = "HomeScreen"  # Navigates to LivingRoom
            text: "Right Button"

<LaundryRoom>
    name: "LaundryRoom"
    Image:
        source: "pics/LaundryRoom/LaundryRoom.png"
        name: "LivingRoom"
    Button:
        size_hint: (.1, .3)  # Adjust width and height
        pos_hint: {"x": 0, "center_y": 0.5}  # Left side, middle height
        on_press: app.root.current = "Hallway"  # Navigates to Closet
        text: "Hallway"
    
    Button:
        size_hint: (.3, None)  # Set width and fixed height
        height: dp(50)  # Specify height
        pos_hint: {"center_x": 0.5, "y": 0}  # Bottom center
        on_press: app.root.current = "Hallway"
        text: "Hallway"
    
    Button:
        size_hint: (.1, .3)  # Adjust width and height
        pos_hint: {"right": 1, "center_y": 0.5}  # Right side, middle height
        on_press: app.root.current = "LaundryRoom"  # Navigates to LivingRoom
        text: "Laundry Room"
    Key:
        size: (70, 70)
        pos_hint: {"right": .7, "y": .6}
        on_touch_down: self.move_key_to_inventory(args[1])

<Hallway>
    name: "Hallway"
    Image:
        source: "pics/hallway/hallway.png"
    Button:
        size_hint: (.1, .3)  # Adjust width and height
        pos_hint: {"x": 0, "center_y": 0.5}  # Left side, middle height
        on_press: app.root.current = "HalfBath"  # Navigates to Closet
        text: "Bathroom"
    
    Button:
        size_hint: (.3, None)  # Set width and fixed height
        height: dp(50)  # Specify height
        pos_hint: {"center_x": 0.5, "y": .8} 
        text: "Outside"
    
    Button:
        size_hint: (.1, .3)  # Adjust width and height
        pos_hint: {"right": 1, "center_y": 0.5}  # Right side, middle height
        on_press: app.root.current = "LaundryRoom"  # Navigates to LivingRoom Image: 
        source: 'pics/LivingRoom/livingroom.png'
        text: "LaundryRoom"

<Outside>
    name: "Outside"
    Image:
        source: "pics/outside/outside.png"
    

<Inventory>
    id: Inventory

    name:"Inventory"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Inventory"
        GridLayout:
            id: inventory_box
            rows: 3
            cols: 3
        Button:
            size_hint: (1, .3)  # Adjust width and height
            on_press: app.root.current = "LivingRoom"
            text: "Back"

<Key>
    id: Key
    size_hint: (None, None)
    source: "pics/inventory/key.png"