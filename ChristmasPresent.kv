<ChristmasPresent>
    BoxLayout:
    HomeScreen:
    LivingRoom:
    HalfBath:
    Kitchen:
    Closet:
    LaundryRoom:
    Hallway:
    Barn:
    Outside:
    Inventory:
<HomeScreen>
    name: "HomeScreen"
    Image:
        size_hint: (1, 1)  # Stretch to fill the screen
        source: "pics/christmas.png"

    BoxLayout:
        orientation: "vertical"
        padding: 50

        Label:
            canvas.before:
                Color:
                    rgba: (.2,.2,.2, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: "Morgan's Christmas App II"
            font_name: "Roboto-BoldItalic"
            color: 1, 1, 1, 1
            font_size: 30
            size_hint: (1, 0.1)  # Use a smaller space for the label

        BoxLayout:
            orientation: "vertical"
            size_hint: (1, 0.9)  # Occupies remaining vertical space

            # Centering the Button
            AnchorLayout:
                anchor_x: "center"  # Horizontal centering
                anchor_y: "bottom"  # Vertical centering

                Button:
                    size_hint: (.6, .2)  # Button size is 30% width, 20% height of parent
                    background_color: [.1, 1, 0, 1]
                    text: "Find your Present!"
                    on_press: app.root.current = "LivingRoom"

<LivingRoom>
    name: "LivingRoom"
    Inventory:
        size_hint: (1, .1)  # Adjust width and height
        pos_hint: {"x": 0, "top": 1}
        text: "Inventory"
    Image: 
        source: 'pics/LivingRoom/livingroom.png'

    Button:
        size_hint: (.1, .3)  # Adjust width and height
        pos_hint: {"x": 0, "center_y": 0.5}  # Left side, middle height
        on_press: app.root.current = "Kitchen"  # Navigates to Closet
        text: "Left Button"
    
    Button:
        size_hint: (.3, None)  # Set width and fixed height
        height: dp(50)  # Specify height
        pos_hint: {"center_x": 0.5, "y": 0}  # Bottom center
        text: "Middle Button"
    
    Button:
        size_hint: (.1, .3)  # Adjust width and height
        pos_hint: {"right": 1, "center_y": 0.5}  # Right side, middle height
        on_press: app.root.current = "Hallway"  
        text: "Right Button"

    Candle:
        size: 200, 200
        pos_hint: {"x": .67, "center_y": .45}
        on_touch_down: self.move_to_inventory(args[1])


<HalfBath>
    name: "HalfBath"
    Image:
        source: "pics/halfbath/halfbath.png"
    FloatLayout:
        Button:
            size_hint: (.1, .3)  # Adjust width and height
            pos_hint: {"x": 0, "center_y": 0.5}  # Left side, middle height
            on_press: app.root.current = "Closet"  # Navigates to Closet
            text: "Closet"
        
        Button:
            size_hint: (.3, None)  # Set width and fixed height
            height: dp(50)  # Specify height
            pos_hint: {"center_x": 0.5, "y": 0}  # Bottom center
            on_press: app.root.current = "Hallway"  # Navigates to LivingRoom
            text: "Hallway"
        
        Button:
            size_hint: (.1, .3)  # Adjust width and height
            pos_hint: {"right": 1, "center_y": 0.5}  # Right side, middle height
            on_press: app.root.current = "LaundryRoom"
            text: "Right Button"

    


<Kitchen>
    name: "Kitchen"
    Image:
        source: "pics/Kitchen/kitchen.png"
    Button:
        size_hint: (.1, .3)  # Adjust width and height
        pos_hint: {"x": 0, "center_y": 0.5}  # Left side, middle height
        on_press: app.root.current = "Outside" 
        text: "Outside"

    Button:
        size_hint: (.3, None)  # Set width and fixed height
        height: dp(50)  # Specify height
        pos_hint: {"center_x": 0.5, "y": 0}  # Bottom center
        on_press: app.root.current = "Hallway"
        text: "Hallway"

    Button:
        size_hint: (.1, .3)  # Adjust width and height
        pos_hint: {"right": 1, "center_y": 0.5}  # Right side, middle height
        on_press: app.root.current = "LivingRoom"  # Navigates to LivingRoom
        text: "living Room"
    Matches:
        size: (200, 300)
        pos_hint: {'x': 0.23, 'y': 0.28} 



<Closet>
    name: "Closet"
    Image:
        source: "pics/closet/dark_closet.png"
    FloatLayout:
        Label:
            text: "It is too dark in here to see... If only there was some way to light it up"
            pos_hint: {"center_x": .5, "y": .8}
            size_hint: (.5, .2)
        Button:
            size_hint: (.1, .1)  # Adjust width and height
            pos_hint: {"x": 0.1, "center_y": 0.5}  # Left side, middle height
            on_press: app.root.current = "Closet"  # Navigates to Closet
            text: "Left Button"
        
        Button:
            size_hint: (.3, None)  # Set width and fixed height
            height: dp(50)  # Specify height
            pos_hint: {"center_x": 0.5, "y": 0}  # Bottom center
            on_press: app.root.current = "HalfBath"
            text: "Back to Bathroom"
        
        Button:
            size_hint: (.1, .3)  # Adjust width and height
            pos_hint: {"right": 1, "center_y": 0.5}  # Right side, middle height
            on_press: app.root.current = "HomeScreen"  # Navigates to LivingRoom
            text: "Right Button"

<LaundryRoom>
    name: "LaundryRoom"
    Image:
        source: "pics/LaundryRoom/LaundryRoom.png"
        name: "LivingRoom"
    Button:
        size_hint: (.1, .3)  # Adjust width and height
        pos_hint: {"x": 0, "center_y": 0.5}  # Left side, middle height
        on_press: app.root.current = "Hallway"  # Navigates to Closet
        text: "Hallway"
    
    Button:
        size_hint: (.3, None)  # Set width and fixed height
        height: dp(50)  # Specify height
        pos_hint: {"center_x": 0.5, "y": 0}  # Bottom center
        on_press: app.root.current = "Hallway"
        text: "Hallway"
    
    Button:
        size_hint: (.1, .3)  # Adjust width and height
        pos_hint: {"right": 1, "center_y": 0.5}  # Right side, middle height
        on_press: app.root.current = "LaundryRoom"  # Navigates to LivingRoom
        text: "Laundry Room"
    Key:
        size: (150, 150)
        pos_hint: {"right": .8, "y": .6}
        on_touch_down: self.move_to_inventory(args[1])

<Hallway>
    name: "Hallway"
    Image:
        source: "pics/hallway/hallway.png"
    Button:
        size_hint: (.1, .3)  # Adjust width and height
        pos_hint: {"x": 0, "center_y": 0.5}  # Left side, middle height
        on_press: app.root.current = "HalfBath"  # Navigates to Closet
        text: "Bath"
        
    Button:
        pos_hint: {"center_x": 0.5, "y": .8} 
        text: "Outside"
        size_hint: (.3, None)
        on_press: app.root.current = "Outside"
    
    Button:
        size_hint: (.1, .3)  # Adjust width and height
        pos_hint: {"right": 1, "center_y": 0.5}  # Right side, middle height
        on_press: app.root.current = "LaundryRoom"  # Navigates to LivingRoom Image: 
        source: 'pics/LivingRoom/livingroom.png'
        text: "LaundryRoom"
    Button:
        size_hint: (.3, None)  # Set width and fixed height
        height: dp(50)  # Specify height
        pos_hint: {"center_x": 0.5, "y": 0}  # Bottom center
        on_press: app.root.current = "Kitchen"
        text: "Kitchen"
    

<Outside>
    name: "Outside"
    Image:
        source: "pics/outside/outside.png"

    Button:
        size_hint: (.1, .3)  # Adjust width and height
        pos_hint: {"x": 0, "center_y": 0.5}  # Left side, middle height
        on_press: app.root.current = "HalfBath"  # Navigates to Closet
        text: "Bath"
    
    Button:
        pos_hint: {"center_x": 0.5, "y": .8} 
        text: "woods"
        size_hint: (.3, None)
        on_press: app.root.current = "Outside"
    
    Button:
        size_hint: (.1, .3)  # Adjust width and height
        pos_hint: {"right": 1, "center_y": 0.5}  # Right side, middle height
        on_press: app.root.current = "Barn"  
        text: "Barn"
    Button:
        size_hint: (.3, None)  # Set width and fixed height
        height: dp(50)  # Specify height
        pos_hint: {"center_x": 0.5, "y": 0}  # Bottom center
        on_press: app.root.current = "Hallway"
        text: "Inside"
    

<Inventory>
    name: "Inventory"
    GridLayout:
        id: inventory_box
        rows: 1
        cols: 5
        

<Key>
    id: Key
    size: 150, 150
    size_hint: (None, None)
    source: "pics/inventory/key.png"

<Matches>
    id: Matches
    size_hint: (None, None)
    size: 150, 150
    source: "pics/inventory/matches.png"
    on_touch_down: root.move_to_inventory(args[1])
    
    

<Barn>
    name: "Barn"
    Image:
        source: "pics/barn/barn.png"
    Button:
        pos_hint: {"center_x": 0.5, "y": .8} 
        text: "Outside"
        size_hint: (.3, None)
        on_press: app.root.current = "Outside"
    
<Candle>
    id: Candle
    source: "pics/inventory/candle.png"
    size_hint: None, None

